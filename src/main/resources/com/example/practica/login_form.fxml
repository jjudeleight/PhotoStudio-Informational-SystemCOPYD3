<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.practica.Controller.LoginFormController">
  <children>
    <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #F0E68C;">
      <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
      </padding>

      <Label text="Фотостудия Мечты" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #4B0082;" GridPane.columnSpan="2" alignment="CENTER" GridPane.rowIndex="0"/>

      <Label text="Имя:" style="-fx-font-size: 16; -fx-text-fill: #333;" GridPane.rowIndex="1"/>
      <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-padding: 5; -fx-border-radius: 5;"/>

      <Label text="Пароль:" style="-fx-font-size: 16; -fx-text-fill: #333;" GridPane.rowIndex="2"/>
      <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-padding: 5; -fx-border-radius: 5;"/>

      <Button text="Вход" fx:id="loginButton" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="100" style="-fx-background-color: #4B0082; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 5;"/>

      <Button text="Закрыть" fx:id="closeButton" GridPane.columnIndex="0" GridPane.rowIndex="3" prefWidth="100" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 5;" onAction="#handleCloseButton"/>

      <Label fx:id="messageLabel" GridPane.columnSpan="2" GridPane.rowIndex="4" style="-fx-text-fill: red; -fx-font-size: 14;"/>
    </GridPane>
  </children>
</AnchorPane>
